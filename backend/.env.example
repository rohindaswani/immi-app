# Environment
ENVIRONMENT=development  # development, staging, production

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/immigration_advisor
MONGODB_URL=mongodb://localhost:27017/immigration_advisor
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
SESSION_MAX_AGE=1209600  # 14 days in seconds

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Immigration Advisor
DEBUG=True
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1
RATE_LIMIT_PER_MINUTE=100

# Logging
LOG_LEVEL=INFO

# File Storage (S3 compatible)
STORAGE_BUCKET_NAME=immigration-advisor-documents
STORAGE_ACCESS_KEY=your-access-key
STORAGE_SECRET_KEY=your-secret-key
STORAGE_REGION=us-east-1
STORAGE_ENDPOINT=https://s3.amazonaws.com

# Services
PINECONE_API_KEY=your-pinecone-api-key

# AI Configuration
AI_PROVIDER=openai  # Options: openai, anthropic, local
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo  # or gpt-4 if you have access
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Optional: Anthropic (Claude) Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# AI Safety & Compliance
ENABLE_CONTENT_FILTERING=true
LOG_AI_INTERACTIONS=true
AI_TIMEOUT=30  # seconds